<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmv.com.blitz.LOginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:background="@drawable/back2"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="#FAFAFA"
            android:text="WELCOME TO THE BLITZ SOCIETY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            android:layout_width="300dp"
            android:layout_height="430dp">

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputLayout
                    android:hint="Enter Email-Id"
                    android:id="@+id/loginemail"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:layout_marginTop="5dp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="Enter Password"
                    android:layout_marginTop="10dp"
                    android:id="@+id/loginpassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:layout_marginTop="5dp"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="Enter College RollNumber"
                    android:layout_marginTop="5dp"
                    android:id="@+id/loginrollnumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:layout_marginTop="2dp"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/logincourse"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/addimage"
                    android:id="@+id/addidimage"
                    android:layout_margin="5dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <Button
                    android:id="@+id/loginsubmit"
                    android:background="@drawable/buttonshape"
                    android:layout_gravity="center"
                    android:text="Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

    
</RelativeLayout>
