<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    android:layout_height="400dp"
    android:layout_width="350dp">

    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:textStyle="bold"
            android:id="@+id/creativeidea"
            android:gravity="start"
            android:hint="Enter your creative imagination , Whatsoever it may be whether it so exits or not just type it becuase one thing you imagine today , is the thing you execute tomorrow. "
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:ignore="HardcodedText" />

        <Button
            android:text="Share"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/creativeidea"
            android:background="@color/colorPrimary"
            android:id="@+id/submitidea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v7.widget.CardView>